---
layout: layouts/layout
title: "Debug Concerts"
permalink: "/debug-concerts/"
lang: "en"
---

<section class="concerts-page">
  <div class="container">
    <h1 class="page-title fadeIn">Debug Concerts</h1>

    <!-- Future Concerts Section -->
    <h2>Future Concerts</h2>
    
      <h2>Future Concerts</h2>
<ul>
  {% for concert in collections.concerts | futureConcerts %}
  <li>
    {{ concert.data.date | formatDate("MMMM d, yyyy", lang) }} |
    {{ concert.data.time | formatTime }} -
    {{ concert.data.hall_nl }}
  </li>
  <p class="concert-date">
    {{ concert.data.date | formatDate('d MMMM yyyy', lang) }}
    {% if concert.data.time %}
      | Raw time value: {{ concert.data.time }} |
      Formatted time: {{ concert.data.time | formatTime }}
    {% else %}
      | Time is undefined or empty for this concert
    {% endif %}
  </p>
  {% endfor %}
</ul>

    


  >
</section>
